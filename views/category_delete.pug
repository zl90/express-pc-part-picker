extends layout 

block content
    if (component_list.length > 0)
        div(class='list-title-container')
            h1= title
            p Please delete the following PC Components before deleting this category: 

            ul 
                each component in component_list 
                    li
                        a(href=component.url) #{component.name}
            a(href=category.url class='cancel-button smaller-button') Cancel
    else
        div(class='list-title-container')
            h1= title
            p Are you sure you want to delete this category?

            form(method='POST' action=""  class='component-form')
                label(for="password") ADMIN PASSWORD
                div(class='delete-password-container') 
                    input(type="password" id='password' minlength=1 name='password')
                button(type="submit" class='update-button') Delete 
                a(href=category.url class='cancel-button') Cancel
    if (errors)
        div(class='error-container')
            h2 Error: 
            ul 
                each error in errors 
                    li= error.msg