extends layout 

block content
    h1= title 
    p= description
    a(href=category.url + '/update') Update
    a(href=category.url + '/delete') Delete

    table
        tr
            th 
                p Name 
            th 
                p Manufacturer 
            th 
                p Stock 
            th 
                p Price 
            th 

        each val in component_list
            tr
                td 
                    img(src=val.imgPath alt=val.name class="img-small")
                    a(href=val.url) #{val.name}
                td 
                    a(href=val.manufacturer.url) #{val.manufacturer.name}
                td 
                    | #{val.quantity}
                td 
                    | $#{val.price.toFixed(2)}
                td 
                    form(method='post' action=val.addUrl)
                        button(type="submit") + Add
